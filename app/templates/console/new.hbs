<div class="row" style="margin-top:20px;">
  <div class="small-12 medium-8 large-6 large-centered medium-centered columns">
    <p class="panel">
      <form {{action "addNewGroup" on="submit"}}>
        <div class="row">
          <div class="large-centered medium-centered columns">
            <h4>Add New Group</h4>
            <div class="row collapse">
              <div class="small-12 columns">
                <label>Group Name
                  {{input value=groupName class="error" type="text" placeholder="Ex: Web Group"}}
                </label>
                {{#if hasError}}
                  <small class="error">{{errorMessage}}</small>
                {{else}}
                  <div class="spacer">&nbsp;</div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="large-centered medium-centered columns">
            <div class="row collapse">
              <div class="small-12 columns">
                <label>Group Description
                  {{input value=groupDescription class="error" type="text" placeholder="Ex: All of my companies web servers."}}
                </label>
                {{#if hasError}}
                  <small class="error">{{errorMessage}}</small>
                {{else}}
                  <div class="spacer">&nbsp;</div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="large-centered medium-centered columns">
            <div class="row collapse">
              <div class="small-12 columns right">
              {{#if isSubmittingNewGroup}}
              <button class="tiny secondary right" disabled {{action "cancelAdd"}}>Cancel</button>
              <button class="tiny right console-cancel" type="submit">Save&nbsp;<i class="fa fa-spinner fa-pulse"></i></button>
              {{else}}
                <button class="tiny secondary right" {{action "cancelAdd"}}>Cancel</button>
                <button class="tiny right console-save" type="submit">Save</button>
              {{/if}}
              </div>
            </div>
          </div>
        </div>
      </form>
    </p>
  </div>
</div>
{{outlet}}
